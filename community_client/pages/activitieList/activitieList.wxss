/* pages/activitieList/activitieList.wxss */
page{
  background-color: rgba(0, 0, 0, 0.00)
}
.page{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pagebox{
  width: 100%;
  position: relative;
}
.search{
  width: 100%;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  height: 100rpx;
  background-color: white;
  /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.20); */
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.20); */
  display: flex;
  align-items: center;
}
.search-input{
  margin-left: 2%;
  width: 98%;
}
.act-list-con{
  margin-top: 100rpx;
  width: 100%;
  overflow-y: scroll;
}
.activitieList{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.activitie-con{
  width: 95%;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 240rpx;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10px 2px rgba(0,0,0, 0.2);
  border-radius: 5rpx;
}
.act-img{
  height: 90%;
  width: 22.5%;
  margin-left: 2.5%;
  overflow: hidden;
}
.act-img image{
  width: 100%;
  height: 100%;
}
.act-right{
  width: 70%;
  margin-left: 3%;
  margin-right: 3%;
}
.act-title{
  font-weight: 500;
}
.act_con{
  font-size: 22rpx;
  color: #5a5a5a;
  margin-top: 20rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.member-type text {
  color: white
}

.pageTips {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.pageTips text {
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.5)
}