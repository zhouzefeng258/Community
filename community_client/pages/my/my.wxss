/* pages/my/my.wxss */

page {
  background-color: #f6f6f6;
}
.userInfo {
  height: 230rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d6d6d6
}
.infoCon {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.userIcon .icon {
  display: block;
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid black;
  margin-left: 50rpx;
}
.userInfo-r{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.r-title{
  margin-right: 20rpx;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}
.title-bar{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #d6d6d6
}
.title-bar text{
  font-size: 28rpx;
  color: #9a9a9a;
  margin-left: 20rpx;
}
.function-bar{
  height: 80rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content:space-between;
  border-bottom: 1px solid #d6d6d6;
  padding: 0 0;
}
.bar-l{
  width: 21%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
}
.bar-l text{
  font-size: 27rpx;
}
.bar-r{
  margin-right: 24rpx;
}