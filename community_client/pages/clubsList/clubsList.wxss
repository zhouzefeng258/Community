/* pages/clubsList/clubsList.wxss */
page{
  background-color: rgba(0, 0, 0, 0.02)
}
.pagebox{
  position: relative;
}
.search{
  width: 100%;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  height: 100rpx;
  background-color: white;
  /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.20); */
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.20); */
  display: flex;
  align-items: center;
}
.search-input{
  margin-left: 2%;
  width: 98%;
}
.clublist{
  margin-top: 100rpx;
  width: 100%;
  background-color: white;
}
.clubs-con{
  width: 96%;
  margin-left: 4%;
  height: 140rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.40);
  display: flex;
  align-items: center;
}
.con-right{
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.clu-icon{
  margin-right: 30rpx;
}
.right-top{
  display: flex;
  align-items: center;
}
.clu-title text{
  font-size: 40rpx;
  font-weight: 300;
}
.clu-star{
  margin-left: 30rpx;
}
.clu-type{
  height: 40rpx;
}
.clu-type text{
  background: #49afcd;
  padding: 5rpx 20rpx;
  color:white;
  font-size: 30rpx;
  font-weight: 300;
  border-radius: 5rpx;
}