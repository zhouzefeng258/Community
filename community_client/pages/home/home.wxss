/* pages/home/home.wxss */
.page{
  width: 750rpx;
  display: flex;
  flex-direction: column;
}
.page-top{
  width: 100%;
  height: 300prx;
}
.news{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.news-con{
  width: 90%;
  /* box-shadow: 1px 1px 2px rgba(0,0,0, 0.58); */
  display: flex;
  flex-direction: column;
   box-shadow: 0 0 10px 2px rgba(0,0,0, 0.2);
   margin-bottom: 30rpx;
}
.news-title{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5rpx 0;
}
.news-title text{
  font-size: 25rpx;
  color: black;
}
.news-img{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5rpx 0;
}
.newImg{
  width: 94%;
  max-height: 250rpx;
}
.news-time{
  width: 80%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin: 5rpx 0;
}
.news-time text{
  font-size: 25rpx;
  color: rgba(0,0,0, 0.58);
}