/* pages/logs/logs.wxss */

.header {
    margin: 90rpx 0 45rpx 50rpx;
    border-bottom: 1px solid #ccc;
    width: 650rpx;
    height: 300rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.header .icon {
    display: block;
    height: 180rpx;
    width: 180rpx;
    border-radius: 50%;
    overflow: hidden;
}
.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
 
.content text {
  margin-top: 45rpx;
  color: #9d9d9d;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
