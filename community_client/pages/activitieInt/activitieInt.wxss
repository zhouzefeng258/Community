/* pages/activitieInt/activitieInt.wxss */

.top {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 400rpx;
  background-color: #d1d1d1;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.topCon {
  width: 85%;
  height: 85%;
  display: flex;
}

.act-image {
  color: black;
  width: 240rpx;
  height: 100%;
  overflow: hidden;
}

.act-image image {
  width: 100%;
  height: 100%;
}

.act-right {
  margin-left: 50rpx;
}

.act-text {
  color: white;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 550;
}

.title {
  margin-top: 20rpx;
  font-size: 33rpx;
}

.club {
  margin-top: 40rpx;
}

.mid {
  margin-top: 400rpx;
  margin-bottom: 150rpx;
}

.mid-text {
  padding: 30rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.one {
  padding: 20rpx 40rpx;
}

.last {
  padding-bottom: 5rpx;
}

.mid-title {
  font-size: 38rpx;
  font-weight: 450;
  margin-bottom: 10rpx;
}

.cont {
  font-size: 30rpx;
  font-size: 300;
  color: #353434;
}

.bot {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  top: 92%;
  z-index: 999;
}

.bot-con {
  width: 100%;
  height: 100rpx;
  background-color: #f0eeee;
  display: flex;
}

.act-num {
  width: 65%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.act-btn {
  width: 35%;
  background-color: #67c8e6;
  color: white;
  border-radius: 0;
}
.act-btn::after {
  border-radius: 0;
}
.disable{
  background-color:#d1d1d1;
}
.cancel{
  background-color:#e6a23c;
}